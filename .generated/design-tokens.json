    "ulauncher": {
      "font_family": "Fira Mono",
      "border_radius": 8,
      "border_width": 2
    },
    "vivaldi": {
      "background": "#101116",
      "accent": "#e06c75",
      "highlight": "#639898",
      "surface_radius": 8
    },
    "mako": {
      "font_size": 13,
      "border_size": 2,
      "border_radius": 8,
      "border_color": "#69ff94"
    },
    "waybar": {
      "font_size": 13,
      "laptop_font_size": 14

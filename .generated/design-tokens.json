{
  "fonts": {
    "sans": "Fira Sans",
    "mono": "Fira Mono"
  },
  "colors": {
    "background": "#282a36",
    "text": "#f8f8f2",
    "primary": "#a4ffff",
    "secondary": "#69ff94",
    "accent": "#e06c75"
  },
  "apps": {
    "niri": {
      "cursor_size": 24,
      "layout_gaps": 16,
      "layout_margin_x": 18,
      "layout_focus_ring_width": 1,
      "layout_focus_ring_color_start": "#e06c75",
      "layout_focus_ring_color_end": "#BD93F9",
      "layout_border_width": 2,
      "layout_border_color_start": "#69ff9488",
      "layout_border_color_end": "#BD93F988",
      "window_corner_radius": 12
